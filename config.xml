<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nhhanaromart.manageApp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>하나로마트로 전단관리자</name>
    <description>
        hanaromart App for manager
    </description>
    <author email="kacmapp1995@gmail.com" href="https://www.nhhanaromart.com">
        KACM IT
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<allow-navigation href="https://www.nhhanaromart.com/*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- <icon src="res/icon-android-ldpi.png" density="ldpi" /> -->
        <icon src="res/icon-android-mdpi.png" density="mdpi" />
        <icon src="res/icon-android-hdpi.png" density="hdpi" />
        <icon src="res/icon-android-xhdpi.png" density="xhdpi" />
        <icon src="res/icon-android-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon-android-xxxhdpi.png" density="xxxhdpi" />                
    </platform>    
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
